{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "outDir": "dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "test/**/*", "types/**/*"],
  "exclude": ["node_modules", "dist"]
}
