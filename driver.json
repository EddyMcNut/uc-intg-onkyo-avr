{
  "driver_id": "onkyo-avr",
  "version": "0.6.2",
  "min_core_api": "0.20.0",
  "name": { "en": "Onkyo AVR" },
  "icon": "uc:music",
  "description": { "en": "Onkyo AVR custom integration for Unfolded Circle Remotes." },
  "developer": {
    "name": "Ed Nootebos",
    "url": "https://github.com/EddyMcNut/uc-intg-onkyo-avr"
  },
  "home_page": "https://github.com/EddyMcNut/uc-intg-onkyo-avr",
  "setup_data_schema": {
    "title": {
      "en": "Integration setup"
    },
    "settings": [
      {
        "id": "infoOne",
        "label": {
          "en": "Setup process"
        },
        "field": {
          "label": {
            "value": {
              "en": "This integration will allow you to control Onkyo AVRs on your network. If below fields 'AVR Model' and 'AVR IP Address' are left empty, the integration will attempt to autodiscover your AVR."
            }
          }
        }
      },
      {
        "id": "model",
        "label": {
          "en": "AVR Model (or a name you prefer)"
        },
        "field": {
          "text": {
            "value": ""
          }
        }
      },
      {
        "id": "ipAddress",
        "label": {
          "en": "AVR IP Address (for example `192.168.1.100`)"
        },
        "field": {
          "text": {
            "value": ""
          }
        }
      },
      {
        "id": "port",
        "label": {
          "en": "AVR Port (default `60128`)"
        },
        "field": {
          "number": {
            "value": 60128
          }
        }
      },
      {
        "id": "albumArtURL",
        "label": {
          "en": "AVR AlbumArt endpoint. Default `album_art.cgi`, if not known set to `na`."
        },
        "field": {
          "text": {
            "value": "album_art.cgi"
          }
        }
      },
      {
        "id": "queueThreshold",
        "label": {
          "en": "Message queue threshold. Default `100`"
        },
        "field": {
          "number": {
            "value": 100
          }
        }
      },
      {
        "id": "volumeScale",
        "label": {
          "en": "Volume scale (0-80 or 0-100)"
        },
        "field": {
          "dropdown": {
            "value": "100",
            "items": [
              {
                "id": "100",
                "label": {
                  "en": "0-100"
                }
              },
              {
                "id": "80",
                "label": {
                  "en": "0-80"
                }
              }
            ]
          }
        }
      },
      {
        "id": "useHalfDbSteps",
        "label": {
          "en": "Adjust volume display"
        },
        "field": {
          "dropdown": {
            "value": "true",
            "items": [
              {
                "id": "true",
                "label": {
                  "en": "Yes - eISCP divided by 2"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "No - just eISCP"
                }
              }
            ]
          }
        }
      },
      {
        "id": "infoTwo",
        "label": {
          "en": "Not auto discoverable? Adjust on-sequence!"
        },
        "field": {
          "label": {
            "value": {
              "en": "If your AVR is not auto-discoverable, you may need to adjust the on-sequence settings of your Activities to ensure proper communication. Some models disconnect during power on, in that case you need to add a delay between 'AVR switch on' and the next AVR command of approx 5 seconds."
            }
          }
        }
      }
    ]
  },
  "release_date": "2025-08-12"
}
