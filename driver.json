{
  "driver_id": "onkyo_avr",
  "version": "0.7.0",
  "min_core_api": "0.20.0",
  "name": { "en": "Onkyo AVR" },
  "icon": "uc:music",
  "description": { "en": "Onkyo AVR custom integration for Unfolded Circle Remotes." },
  "developer": {
    "name": "Ed Nootebos",
    "url": "https://github.com/EddyMcNut/uc-intg-onkyo-avr"
  },
  "home_page": "https://github.com/EddyMcNut/uc-intg-onkyo-avr",
  "setup_data_schema": {
    "title": {
      "en": "Integration setup"
    },
    "settings": [
      {
        "id": "infoOne",
        "label": {
          "en": "Setup process"
        },
        "field": {
          "label": {
            "value": {
              "en": "This integration will allow you to control Onkyo AVRs on your network. If below fields 'AVR Model' AND 'AVR IP Address' are left empty, the integration will attempt to autodiscover your AVR."
            }
          }
        }
      },
      {
        "id": "model",
        "label": {
          "en": "AVR Model (or a name you prefer)"
        },
        "field": {
          "text": {
            "value": ""
          }
        }
      },
      {
        "id": "ipAddress",
        "label": {
          "en": "AVR IP Address (for example `192.168.1.100`)"
        },
        "field": {
          "text": {
            "value": ""
          }
        }
      },
      {
        "id": "port",
        "label": {
          "en": "AVR Port (default `60128`)"
        },
        "field": {
          "number": {
            "value": 60128
          }
        }
      },
      {
        "id": "albumArtURL",
        "label": {
          "en": "AVR AlbumArt endpoint. Default `album_art.cgi`, if not known set to `na`."
        },
        "field": {
          "text": {
            "value": "album_art.cgi"
          }
        }
      },
      {
        "id": "queueThreshold",
        "label": {
          "en": "Message queue threshold. Default `100`"
        },
        "field": {
          "number": {
            "value": 100
          }
        }
      },
      {
        "id": "volumeScale",
        "label": {
          "en": "Volume scale (0-80 or 0-100)"
        },
        "field": {
          "dropdown": {
            "value": "100",
            "items": [
              {
                "id": "100",
                "label": {
                  "en": "0-100"
                }
              },
              {
                "id": "80",
                "label": {
                  "en": "0-80"
                }
              }
            ]
          }
        }
      },
      {
        "id": "useHalfDbSteps",
        "label": {
          "en": "Adjust volume display"
        },
        "field": {
          "dropdown": {
            "value": "true",
            "items": [
              {
                "id": "true",
                "label": {
                  "en": "Yes - eISCP divided by 2"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "No - just eISCP"
                }
              }
            ]
          }
        }
      },
      {
        "id": "zoneCount",
        "label": {
          "en": "Number of zones to configure"
        },
        "field": {
          "dropdown": {
            "value": "1",
            "items": [
              {
                "id": "1",
                "label": {
                  "en": "1 zone (Main only)"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "2 zones (Main + Zone 2)"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "3 zones (Main + Zone 2 + Zone 3)"
                }
              }
            ]
          }
        }
      },
      {
        "id": "infoTwo",
        "label": {
          "en": "Not auto discoverable? Adjust on-sequence!"
        },
        "field": {
          "label": {
            "value": {
              "en": "If your AVR is not auto-discoverable, you may need to adjust the on-sequence settings of your Activities to ensure proper communication. Some models disconnect during power on, in that case you need to add a delay between 'AVR switch on' and the next AVR command of approx 5 seconds."
            }
          }
        }
      },
      {
        "id": "infoThree",
        "label": {
          "en": "Entity migration (multi-zone upgrade)"
        },
        "field": {
          "label": {
            "value": {
              "en": "If upgrading from single-zone to multi-zone, provide the Remote's IP address and 4-digit PIN code below to automatically update your activities. Leave empty to skip migration (old activities won't work with multi-zone entities)."
            }
          }
        }
      },
      {
        "id": "remoteIp",
        "label": {
          "en": "Remote IP Address (for entity migration)"
        },
        "field": {
          "text": {
            "value": ""
          }
        }
      },
      {
        "id": "remotePinCode",
        "label": {
          "en": "Remote 4-digit PIN code (for entity migration)"
        },
        "field": {
          "text": {
            "value": ""
          }
        }
      }
    ]
  },
  "release_date": "2025-08-12"
}
