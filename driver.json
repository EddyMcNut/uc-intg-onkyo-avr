{
  "driver_id": "onkyo_avr_custom_driver",
  "version": "0.8.0-beta2",
  "min_core_api": "0.20.0",
  "name": { "en": "Onkyo AVR" },
  "icon": "uc:music",
  "description": { "en": "Onkyo AVR custom integration for Unfolded Circle Remotes." },
  "developer": {
    "name": "Ed Nootebos",
    "url": "https://github.com/EddyMcNut/uc-intg-onkyo-avr"
  },
  "home_page": "https://github.com/EddyMcNut/uc-intg-onkyo-avr",
  "setup_data_schema": {
    "title": {
      "en": "Integration setup"
    },
    "required": [],
    "settings": [
      {
        "id": "infoOne",
        "label": {
          "en": "Setup process"
        },
        "field": {
          "label": {
            "value": {
              "en": "This integration will allow you to control Onkyo AVRs on your network. If below fields 'AVR Model' AND 'AVR IP Address' are left empty, the integration will attempt to autodiscover your AVR."
            }
          }
        }
      },
      {
        "id": "model",
        "label": {
          "en": "AVR Model (or a name you prefer)"
        },
        "field": {
          "text": {
            "value": ""
          }
        }
      },
      {
        "id": "ipAddress",
        "label": {
          "en": "AVR IP Address (for example `192.168.1.100`)"
        },
        "field": {
          "text": {
            "value": ""
          }
        }
      },
      {
        "id": "port",
        "label": {
          "en": "AVR Port (default `60128`)"
        },
        "field": {
          "number": {
            "value": 60128
          }
        }
      },
      {
        "id": "albumArtURL",
        "label": {
          "en": "AVR AlbumArt endpoint. Default `album_art.cgi`, if not known set to `na`."
        },
        "field": {
          "text": {
            "value": "album_art.cgi"
          }
        }
      },
      {
        "id": "queueThreshold",
        "label": {
          "en": "Message queue threshold. Default `100`"
        },
        "field": {
          "number": {
            "value": 100
          }
        }
      },
      {
        "id": "netMenuDelay",
        "label": {
          "en": "NET sub-source selection delay. Default `500`"
        },
        "field": {
          "number": {
            "value": 500
          }
        }
      },
      {
        "id": "volumeScale",
        "label": {
          "en": "Volume scale (0-80 or 0-100)"
        },
        "field": {
          "dropdown": {
            "value": "100",
            "items": [
              {
                "id": "100",
                "label": {
                  "en": "0-100"
                }
              },
              {
                "id": "80",
                "label": {
                  "en": "0-80"
                }
              }
            ]
          }
        }
      },
      {
        "id": "adjustVolumeDispl",
        "label": {
          "en": "Adjust volume display"
        },
        "field": {
          "dropdown": {
            "value": "true",
            "items": [
              {
                "id": "true",
                "label": {
                  "en": "Yes - eISCP divided by 2"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "No - just eISCP"
                }
              }
            ]
          }
        }
      },
      {
        "id": "zoneCount",
        "label": {
          "en": "Number of zones to configure"
        },
        "field": {
          "dropdown": {
            "value": "1",
            "items": [
              {
                "id": "1",
                "label": {
                  "en": "1 zone (Main only)"
                }
              },
              {
                "id": "2",
                "label": {
                  "en": "2 zones (Main + Zone 2)"
                }
              },
              {
                "id": "3",
                "label": {
                  "en": "3 zones (Main + Zone 2 + Zone 3)"
                }
              }
            ]
          }
        }
      },
      {
        "id": "createSensors",
        "label": {
          "en": "Create sensor entities?"
        },
        "field": {
          "dropdown": {
            "value": "true",
            "items": [
              {
                "id": "true",
                "label": {
                  "en": "Yes"
                }
              },
              {
                "id": "false",
                "label": {
                  "en": "No"
                }
              }
            ]
          }
        }
      }
    ]
  },
  "release_date": "2025-08-12"
}
