{
  "name": "uc-intg-onkyo-avr",
  "type": "module",
  "version": "0.8.0",
  "description": "Onkyo AVR custom integration for Unfolded Circle Remotes",
  "main": "dist/src/index.js",
  "scripts": {
    "format": "prettier --write .",
    "code-check": "prettier --check . && eslint .",
    "lint": "eslint --fix",
    "build": "tsc",
    "test": "npm run build && ava --tap > test.tap && npx tap-junit < test.tap > test-results.xml",
    "start": "npm run build && node dist/src/index.js"
  },
  "dependencies": {
    "@unfoldedcircle/integration-api": "^0.3.0",
    "async": "^3.2.6",
    "debug": "^4.4.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/EddyMcNut/uc-intg-onkyo-avr"
  },
  "keywords": [
    "Unfolded",
    "Circle",
    "Remote",
    "Onkyo"
  ],
  "author": "Ed Nootebos",
  "license": "GNU GPL-v3",
  "bugs": {
    "url": "https://github.com/EddyMcNut/uc-intg-onkyo-avr/issues"
  },
  "homepage": "https://github.com/EddyMcNut/uc-intg-onkyo-avr",
  "devDependencies": {
    "@ava/typescript": "^5.0.0",
    "@types/async": "^3.2.25",
    "@types/debug": "^4.1.12",
    "@types/node": "^22.5.5",
    "@types/node-fetch": "^2.6.13",
    "@types/ws": "^8.5.12",
    "@typescript-eslint/eslint-plugin": "^8.8.1",
    "@typescript-eslint/parser": "^8.8.1",
    "ava": "^6.1.3",
    "tap-junit": "^2.1.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-semistandard": "^17.0.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-promise": "^6.6.0",
    "prettier": "3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "5.5.x"
  }
}
